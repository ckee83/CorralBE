<div class="content">
	<div id="regForm">
		<h1> Sign In</h1>
		<form action="/session/create" method="POST" class="form-horizontal">
		  <% if (flash && flash.err){ %>
		  	<ul class="alert alert-danger">
			  	<% flash.err.forEach(function(error){ %>
			  		<li><%= error.message %></li>
			  	<% }) %>
		  	</ul>
		  <% } %>
		  <div class="form-group">
		    <label class="col-sm-4 control-label" for="email">Email</label>
		    <div class="col-sm-8">
		      <input class="form-control" type="email" id="email" name="email" placeholder="Email">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="col-sm-4 control-label" for="pw">Password</label>
		    <div class="col-sm-8">
		      <input class="form-control" type="password" id="pw" name="pw" placeholder="Password">
		    </div>
		  </div>
		  <div class="form-group">
		    <div>
		      <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
		      <button type="submit" class="btn btn-default">Submit</button>
		    </div>
		  </div>
		</form>
	</div>
</div>