<div class="content">
	<div id="regForm">
		<h1> Edit Form</h1>
		<form action="/user/update/<%= user.id %>" method="POST" class="form-horizontal validateEditForm">
		  <div class="form-group">
		    <label class="col-sm-4 control-label" for="firstName">First Name</label>
		    <div class="col-sm-8">
		      <input class="form-control" type="text" id="firstName" name="firstName" placeholder="First Name" value="<%= user.firstName %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="col-sm-4 control-label" for="lastName">Last Name</label>
		    <div class="col-sm-8">
		      <input class="form-control" type="text" id="lastName" name="lastName" placeholder="Last Name" value="<%= user.lastName %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="col-sm-4 control-label" for="email">Email</label>
		    <div class="col-sm-8">
		      <input class="form-control" type="email" id="email" name="email" placeholder="Email" value="<%= user.email %>">
		    </div>
		  </div>
		  <div class="form-group">
		    <div>
		      <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
		      <button type="submit" class="btn btn-default">Submit</button>
		    </div>
		  </div>
		</form>
	</div>
</div>